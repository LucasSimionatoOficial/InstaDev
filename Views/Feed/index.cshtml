@{
    ViewData["Title"] = "Feed";
}
@*Nao aparecer a pagina depende do login*@
<link rel="stylesheet" href="~/css/styleFeed.css">
        <header class="header">
            <div class="menu">
                <ul>
                    <a href="#"><img src="img/Instadev.png" alt="Logo"></a>
                    <form class="pesquisa">
                        <input type="search" placeholder="             Pesquisar">
                    </form>
                    <div class="botoes">
                        <a href="#"><img src="img/Vector.png" alt="Home"></a>
                        <a href="#"><img src="img/plane 1.png" alt="Plane"></a>
                        <a href="#"><img src="img/compass 1.png" alt="Compass"></a>
                        <a href="#"><img src="img/Vector (1).png" alt="Heart"></a>
                        <a href="#"><img src="" alt=""></a>
                    </div>
                </ul>
            </div>
        </header>
<main>
    <div class="container1">
        <div id="top-status-bar">
            <div id="status">
                @foreach (var item in ViewBag.Usuarios)
                {
                    <div class="statusprofile">
                        <img src="" alt="" class="pimg">@*Ver com quem fez cadastro o local da pasta*@
                        <h3>@item.NomeUsuario</h3>
                    </div>
                }
            </div>
            <div id="profilefeed">
                <img src="./images/thank-you 2.png" alt="" class="pimg">
                <div>
                    @foreach (var item in ViewBag.NomeUsuario)
                    {
                        <h2>@item.NomeUsuario</h2>
                        <h3>@item.Nome</h3>@*Depende do login*@
                    }
                </div>
            </div>
        </div>
        <div id="post">
            <div>
                <img src="./images/thank-you 2.png" alt=""> @*depende do cadastro*@
                <h1>Postar</h1>
            </div>
            <form method="POST" action='@Url.Action("CadastrarPublicacao")' enctype="multipart/form-data">
                <input type="text" placeholder="digite aqui a descrição da imagem" name="Legenda">
                <label for="postImage">Escolha a imagem</label>
                <input type="file" id="postImage" name="Imagem" required>
                <button type="submit">Postar</button>
            </form>
        </div>
        @foreach (var publicacao in ViewBag.Publicacoes)
        {
            <div class="publication">
                <div class="publicationUser">
                    <img src="" alt="">
                    <div>
                        <h3>@publicacao.Split(";")[2]</h3>
                        <h4>Em algum lugar</h4>
                    </div>
                </div>
                <img src='~/img/Publicacao/@publicacao.Split(";")[4]' alt="" class="publicationImage">
                <div class="publicationBottom">
                    <div class="likeComment">
                        @* <a asp-controller="Feed" asp-action="Like">
                            <img src="./imagens/hearth.svg" alt="">
                        </a> *@
                        <form method="POST" action='@Url.Action("Comentar")' enctype="multipart/form-data">
                        <button type="submit" class="buttonComment">
                            <select name="idPublicacao" id="">
                                <option value='@publicacao.Split(";")[3]'></option>
                            </select>
                            <svg width="24" height="22" viewBox="0 0 24 22" fill="none" @*class="baloon"*@>
                                <path d="M3.49337 21.566H1.79281L2.99532 20.3635C3.64369 19.7151 4.04858 18.8718 4.15744 17.957C2.46551 16.8467 1.2283 15.3859 0.566021 13.7106C-0.0957876 12.0366 -0.178954 10.1939 0.325539 8.38149C0.930854 6.20681 2.3506 4.22467 4.32316 2.80014C6.4667 1.25219 9.13516 0.43396 12.0401 0.43396C15.6996 0.43396 18.7841 1.48535 20.9601 3.47439C22.9204 5.26634 24 7.68342 24 10.2805C24 11.5422 23.7431 12.7699 23.2364 13.9294C22.7121 15.1293 21.9444 16.1977 20.9545 17.1048C18.7756 19.1017 15.693 20.1572 12.0401 20.1572C10.684 20.1572 9.26895 19.9762 8.00558 19.644C6.80974 20.8707 5.18929 21.566 3.49337 21.566ZM12.0401 1.84276C6.21523 1.84276 2.64105 5.31654 1.68273 8.75928C0.777154 12.0127 2.11209 15.0868 5.25372 16.9827L5.60475 17.1945L5.59395 17.6044C5.57253 18.4155 5.37915 19.1969 5.03301 19.9031C5.8759 19.618 6.64073 19.1009 7.23966 18.3933L7.53748 18.0415L7.97914 18.1736C9.21856 18.5443 10.6608 18.7484 12.0401 18.7484C19.2894 18.7484 22.5912 14.3589 22.5912 10.2805C22.5912 8.08385 21.6744 6.03602 20.0095 4.51423C18.0976 2.76656 15.3418 1.84276 12.0401 1.84276Z" fill="black"/>
                            </svg>
                        </button>
                        <input type="text" class="publicationInput" placeholder="Comentar..." name="mensagem">
                        </form>                    
                    </div>
                    <div class="comments">
                            <h5>@publicacao.Split(";")[1]</h5>
                            <h6>@publicacao.Split(";")[5]</h6>
                            <div>
                                @foreach (var item in (publicacao.Split(";")[9]).Split("/"))
                                {
                                    <h5>@item</h5>
                                }
                            </div>
                            <div>
                            @foreach (var item in (publicacao.Split(";")[8]).Split("/"))
                            {
                                <h6>@item</h6>
                            }
                            </div>
                    </div>
                </div>
            </div>
        }
    </div>
</main>